{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.7.0",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"start:dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.15.7",
		"@babel/core": "^7.15.8",
		"@babel/preset-typescript": "^7.15.0",
		"@types/node": "^16.11.1",
		"nodemon": "^2.0.14",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.3.0",
		"typescript": "^4.4.4",
		"webpack": "^5.59.0",
		"webpack-cli": "^4.9.1",
		"nexe": "4.0.0-beta.19"
	},
	"dependencies": {
		"@polkadot/api": "6.4.2",
		"bn.js": "^5.2.0",
		"dotenv": "^10.0.0",
		"prom-client": "^14.0.0"
	}
}
