{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.10.0",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish",
		"update": "././node_modules/.bin/ncu -u && yarn"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.17.0",
		"@babel/core": "^7.17.2",
		"@babel/preset-typescript": "^7.16.7",
		"@types/node": "^17.0.17",
		"nexe": "4.0.0-beta.19",
		"nodemon": "^2.0.15",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5",
		"webpack": "^5.68.0",
		"webpack-cli": "^4.9.2",
		"npm-check-updates": "12.3.0"
	},
	"dependencies": {
		"@polkadot/api": "7.7.1",
		"bn.js": "^5.2.0",
		"dotenv": "^16.0.0",
		"prom-client": "^14.0.1",
		"winston": "^3.5.1"
	}
}
