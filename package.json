{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.9.0",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish",
		"update": "././node_modules/.bin/ncu -u && yarn"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.16.0",
		"@babel/core": "^7.16.0",
		"@babel/preset-typescript": "^7.16.0",
		"@types/node": "^16.11.10",
		"nexe": "4.0.0-beta.19",
		"nodemon": "^2.0.15",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2",
		"webpack": "^5.64.3",
		"webpack-cli": "^4.9.1",
		"npm-check-updates": "12.0.2"
	},
	"dependencies": {
		"@polkadot/api": "6.9.2",
		"bn.js": "^5.2.0",
		"dotenv": "^10.0.0",
		"prom-client": "^14.0.1",
		"winston": "^3.3.3"
	}
}
