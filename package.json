{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.12.0",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish",
		"update": "./node_modules/.bin/ncu -u && yarn"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.17.6",
		"@babel/core": "^7.17.9",
		"@babel/preset-typescript": "^7.16.7",
		"@types/node": "^17.0.25",
		"nexe": "4.0.0-beta.19",
		"nodemon": "^2.0.15",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.8",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2",
		"npm-check-updates": "12.5.9"
	},
	"dependencies": {
		"@polkadot/api": "8.1.1",
		"bn.js": "^5.2.0",
		"dotenv": "^16.0.0",
		"prom-client": "^14.0.1",
		"winston": "^3.7.2"
	}
}
