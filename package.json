{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.4.2",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"start:dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.14.3",
		"@babel/core": "^7.14.3",
		"@babel/preset-typescript": "^7.13.0",
		"@types/node": "^15.6.1",
		"nodemon": "^2.0.7",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.2",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0",
		"nexe": "4.0.0-beta.18"
	},
	"dependencies": {
		"@polkadot/api": "4.12.1",
		"bn.js": "^5.2.0",
		"dotenv": "^10.0.0",
		"prom-client": "^13.1.0"
	}
}
