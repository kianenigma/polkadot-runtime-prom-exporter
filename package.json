{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.4.0",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"start:dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "rimraf ./build && tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish",
		"release": "gh release create v0.4.0 binaries/*"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.13.16",
		"@babel/core": "^7.14.0",
		"@babel/preset-typescript": "^7.13.0",
		"@types/node": "^15.0.2",
		"nodemon": "^2.0.7",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.1.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4",
		"webpack": "^5.36.2",
		"webpack-cli": "^4.6.0",
		"nexe": "4.0.0-beta.18"
	},
	"dependencies": {
		"@polkadot/api": "4.8.1",
		"bn.js": "^5.2.0",
		"dotenv": "^8.5.1",
		"prom-client": "^13.1.0"
	}
}
