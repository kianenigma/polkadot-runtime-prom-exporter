{
	"name": "polkadot-runtime-prom-exporter",
	"version": "0.6.0",
	"description": "Prometheus exporter for polkadot runtime metrics",
	"scripts": {
		"start:dev": "nodemon",
		"run": "yarn run build && node build/index.js",
		"build": "./node_modules/.bin/rimraf ./build && ./node_modules/.bin/tsc",
		"binary": "yarn run build && rimraf ./binaries &&./node_modules/.bin/nexe build/index.js --build -o binaries/polkadot-runtime-prom-exporter",
		"publish": "npm publish"
	},
	"author": "@kianenigma",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.6",
		"@babel/preset-typescript": "^7.14.5",
		"@types/node": "^15.12.4",
		"nodemon": "^2.0.7",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.4",
		"webpack": "^5.40.0",
		"webpack-cli": "^4.7.2",
		"nexe": "4.0.0-beta.18"
	},
	"dependencies": {
		"@polkadot/api": "4.15.1",
		"bn.js": "^5.2.0",
		"dotenv": "^10.0.0",
		"prom-client": "^13.1.0"
	}
}
